@model AsopaabiOnline.UI.Models.Role
@{
    ViewBag.Title = "Agregar nuevo rol";
}



<div class=" row justify-content-md-center">


   
    <div class="card w-25 text-center">

        <div class="card-header">
            <h3 class="card-title">
                @ViewBag.Title
            </h3>
        </div>

        <form asp-action="AddRole" asp-controller="Administrador" method="post">
            <div class="card-body">
                <h5 class="card-title">Nombre </h5>
                <p class="card-text">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </p>

                <button type="submit" class="btn btn-success btn-block"> Guardar</button>

            </div>

        </form>
        <div class="card-footer">
            <a class="btn btn-secondary btn-block" asp-controller="Administrador" asp-action="RolesList"> Volver</a>
        </div>

    </div>
    
</div>
           
   
<div>
    <br />
   
</div>