@model AsopaabiOnline.UI.Models.Role
@{
    ViewBag.Title = "Agregar nuevo rol";
}
<h1>@ViewBag.Title</h1>

<br />
<form asp-action="AddRole" asp-controller="Administrador" method="post" class="mt-3">
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Nombre </h5>
                    <p class="card-text">


                        <input asp-for="Name" class="form-control"  style="width:200px;" />
                        <span asp-validation-for="Name" class="text-danger"></span>






                    </p>

                    <button type="submit" class="btn btn-success" style="width:auto"> Guardar</button>

                </div>
                <div class="card-footer">
                    <a class="btn btn-secondary" asp-controller="Administrador" asp-action="RolesList"> <i class="fas fa-arrow-alt-circle-left"></i> Volver</a>
                </div>



            </div>
        </div>
    </div>
</form>           
   
<div>
