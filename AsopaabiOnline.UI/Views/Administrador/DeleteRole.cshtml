@model AsopaabiOnline.UI.Models.Role


@{
    ViewBag.Title = "Eliminar";
}


<div class="row justify-content-md-center">


    <div class=" card  w-75">


        <div class="card-header">
            <h3 class="card-title "> @ViewBag.Title</h3>

        </div>


        <div class="card-body text-center">
            <br />
            <h4 class="card-subtitle text-center">¿Está seguro que desea eliminar este rol?</h4>
            <br />
            <br />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>



            </dl>
        </div>

        <div class="card-footer text-center ">
            <button type="button" class="btn btn-danger btn-lg " data-toggle="modal" data-target="#cambiarEstado">Si</button>
            <a class="btn btn-secondary btn-lg  " asp-action="Mostrar">No</a>


            <div class="modal fade" id="cambiarEstado" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalCenterTitle">Eliminar Rol</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            El rol @Model.Name se eliminará, ¿estas deacuerdo?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            <form asp-action="DeleteRole" asp-controller="Administrador">
                                <input type="hidden" asp-for="id" />
                                <button type="submit" class="btn btn-danger">Eliminar</button>


                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>