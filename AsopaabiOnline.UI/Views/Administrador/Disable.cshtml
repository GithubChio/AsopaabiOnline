@model AsopaabiOnline.UI.Models.User

@{
    ViewBag.Title = "Deshabilitar usuario";
}

<h3>@ViewBag.Title</h3>
<div class="card">
        <div class="card-header">
            <h3 style="text-align:center;">¿Está seguro que desea deshabilitar este usuario?</h3>

        </div>

        <div class="card-body">


            <dl class="row">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DNI)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DNI)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-2">
                    <label>Rol </label>

                </dt>
                <dd class="col-sm-10">

                    @foreach (var roles in @ViewBag.Roles)
                    {

                        <h6>@roles</h6>


                    }
                </dd>
            </dl>
        </div>
    
    <div class="card-footer">
       

          
                
            <p>

                <button class="btn btn-danger" data-toggle="modal" data-target="#disable">Deshabilitar</button>
                <a class="btn btn-secondary" asp-action="UserList" asp-controller="Administrador" >Cancelar</a>

            </p>



            <div class="modal fade" id="disable" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Deshabilitar Usuario</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                          ¿ Esta seguro que va a deshabilitar el usuario @Model.Name ?
                        </div>

                        <div class="modal-footer">

                            <form method="post">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">NO</button>
                                <button type="submit"  class="btn btn-primary"> SI</button>
                                </form>
                        </div>
                    </div>
                </div>
            </div>

       
    </div>



    </div>


