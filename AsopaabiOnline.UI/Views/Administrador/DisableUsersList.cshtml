@model IEnumerable<AsopaabiOnline.UI.Models.User>



@{
    ViewBag.Title = "Usuarios  deshabilitados";
}

<h2> @ViewBag.Title</h2>
<br />

@if (Model.Any())

{<div class="card">
        <div style="margin:15px;">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            <label>Cédula</label>
                        </th>
                        <th>
                            <label>Nombre</label>
                        </th>
                        <th>
                            <label>Apellido</label>
                        </th>
                        <th>
                            <label>Correo Electrónico</label>
                        </th>

                        <th>
                            <label> Opciones</label>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ int rowNumber = 0; }
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                @(rowNumber += 1)
                            </td>

                            <td>
                                <h5 class="card-title">@user.DNI</h5>
                            </td>

                            <td>
                                <h5 class="card-title">@user.Name</h5>
                            </td>

                            <td>
                                <h5 class="card-title">@user.LastName</h5>
                            </td>
                            <td>
                                <h5 class="card-title">@user.Email</h5>
                            </td>

                            <td>
                                <a asp-action="UserDetails" asp-controller="Administrador" class="btn btn-success" asp-route-id="@user.Id">Detalles </a>

                            </td>
                        </tr>

                    }

                </tbody>
            </table>

        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            No hay ningún usuario deshabilitado 
        </div>
    </div>
   
}
