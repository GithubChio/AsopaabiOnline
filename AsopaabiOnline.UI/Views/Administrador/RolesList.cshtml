@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "Listado de Roles ";
}

<h1>Roles</h1>




@if (Model.Any())

{
    <div class="card">

        <div style="margin:15px;">

            <div class="card-header">
                <a class="btn btn-success mb-3" style="width:auto" asp-action="AddRole" asp-controller="Administrador"> <i class="fas fa-plus-circle"></i> Agregar</a>

            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            <label>Nombre</label>
                        </th>

                        <th>
                            <label> Opciones</label>
                        </th>
                    </tr>
                </thead>
                <tbody>
                         @{ int rowNumber = 0; }
                 @foreach (var role in Model)
                   {
                    <tr>
                        <td>
                            @(rowNumber += 1)
                        </td>
                        <td>
                            <h5 class="card-title">@role.Name</h5>
                        </td>


                        <td>
                            <a asp-action="DeleteRole" asp-controller="Administrador" class="btn btn-danger" asp-route-id="@role.Id">Eliminar</a>


                        </td>
                    </tr>

                  }   

                </tbody>
            </table>

        </div>
    </div>
            }
            else
            {
            <div class="card">
                <div class="card-header">
                    Aún no hay roles creados
                </div>
            </div>
            <div class="card-body">

                <a class="btn btn-success" style="width:auto"
                   asp-controller="Administrador" asp-action="AddRole"><i class="fas fa-plus-circle"></i> Crear un rol nuevo</a>
            </div>
            }
