@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "Listado de Roles ";
}

<h1>Roles</h1>

<a class="btn btn-outline-success mb-3" style="width:auto" asp-action="AddRole" asp-controller="Administrador">Agregar</a>



@if (Model.Any())

{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>
                    <label>Nombre</label>
                </th>

                <th>
                    <label> Opciones</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>
                        <h5 class="card-title">@role.Name</h5>
                    </td>


                    <td>
                        <ul class="list-group list-group-flush">
                           
                            <li class="list-group-item"> <a asp-action="DeleteRole" asp-controller="Administrador" class="btn btn-outline-danger" asp-route-id="@role.Id">Eliminar</a></li>
                        </ul>

                    </td>
                </tr>

            }

        </tbody>
    </table>


}
else
{
    <div class="card">
        <div class="card-header">
            Aún no hay roles creados
        </div>
    </div>
    <div class="card-body">

        <a class="btn btn-outline-success" style="width:auto"
           asp-controller="Administrador" asp-action="AddRole">Crear un rol nuevo</a>
    </div>
}
