@model IEnumerable<AsopaabiOnline.UI.Models.User>



@{
    ViewBag.Title = "Lista de usuarios";
}







@if (Model.Any())

{

<div class="card">
    <div class="m-5">

        <div class="card-header text-center">
            <h3 class="card-title">@ViewBag.Title</h3>   

        </div>

       <br />
        <a class="btn" style="border-radius: 25px; background-color: #96c401 " asp-action="Register" asp-controller="Cuenta"
             data-toggle="tooltip" data-placement="top" title="Registrar una cuenta nueva"><i class="fas fa-user-plus text-white"></i></a>
        <br />

        <div class="card-body">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            <label>Cédula</label>
                        </th>
                        <th>
                            <label>Nombre</label>
                        </th>
                        <th>
                            <label>Apellido</label>
                        </th>
                        <th>
                            <label>Correo Electrónico</label>
                        </th>
                        <th>
                            <label>Tipo de usuario</label>
                        </th>

                        <th>
                            <label> Opciones</label>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ int rowNumber = 0; }
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                @(rowNumber += 1)
                            </td>
                            <td>
                                <h5 class="card-title">@user.DNI</h5>
                            </td>

                            <td>
                                <h5 class="card-title">@user.Name</h5>
                            </td>

                            <td>
                                <h5 class="card-title">@user.LastName</h5>
                            </td>
                            <td>
                                <h5 class="card-title">@user.Email</h5>
                            </td>
                            <td>
                                <h5 class="card-title">@user.UserType</h5>
                            </td>



                            <td>
                                <a asp-action="UserDetails" asp-controller="Administrador" asp-route-id="@user.Id" class="btn btn-lg"
                                     data-toggle="tooltip" data-placement="top" title="ver detalles"> <i class="fas fa-search-plus text-info"></i></a> |
                                <a asp-action="EditUser" asp-controller="Administrador" asp-route-id="@user.Id" class="btn btn-lg" 
                                    data-toggle="tooltip" data-placement="top" title="Actualizar"><i class="fas fa-user-edit text-success"></i></a> 



                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>



    </div>
    </div>
    }
    else
    {
    <div class="card">
        <div class="card-header">
            No hay usuarios creados
        </div>
    </div>
    <div class="card-body">

        <a class="btn btn-outline-success" style="width:auto"
           asp-controller="Cuenta" asp-action="Register">Registro</a>
    </div>
    }


