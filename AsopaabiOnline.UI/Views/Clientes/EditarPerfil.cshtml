@model AsopaabiOnline.UI.Models.User

@{
    ViewBag.Title = "Editar perfil";
}


<div class="row justify-content-md-center">
    <div class="card w-50">
        <h3 class="card-header text-center">@ViewBag.Title</h3>


        <br />
        <h6 class="card-subtitle mb-2  text-muted text-center">Los campos marcados con  un asterisco (*) son requeridos.</h6>
        <br />
        <div class="card-body">
            <form asp-controller="Clientes" asp-action="EditarPerfil" asp-route-id="@User.Identity.Name" method="post">

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label asp-for="SecondName" class="control-label"></label>
                    <input asp-for="SecondName" class="form-control" />
                    <span asp-validation-for="SecondName" class="text-danger"></span>


                </div>
                <div class="form-group">
                    <label asp-for="FirstLastName" class="control-label"></label>
                    <input asp-for="FirstLastName" class="form-control" />
                    <span asp-validation-for="FirstLastName" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="SecondLastName" class="control-label"></label>
                    <input asp-for="SecondLastName" class="form-control" />
                    <span asp-validation-for="SecondLastName" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label>Número de teléfono principal</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber2" class="control-label"></label> <small> <i class="fas fa-asterisk text-danger"></i></small>
                    <input asp-for="PhoneNumber2" class="form-control" required />
                    <span asp-validation-for="PhoneNumber2" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ActivityType" class="control-label"></label>
                    <select asp-for="ActivityType" asp-items="Html.GetEnumSelectList<AsopaabiOnline.Modelo.TipoDeActividad>()" class="form-control">
                        <option selected="selected" disabled value="">Seleccione una opción</option>
                    </select>
                    <span asp-validation-for="ActivityType" class="text-danger" s></span>

                </div>

                <br />
                <hr />
                <br />
                <div class="card-footer  text-center">


                    <input type="submit" id="guardar" value="Guardar" class="btn btn-success" />
                    <a class="btn btn-secondary" asp-action="Perfil" asp-route-id="@User.Identity.Name"> Volver </a>
                </div>


            </form>


        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}