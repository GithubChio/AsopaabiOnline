            @Html.DisplayFor(model => model.TipoActividad)
        </dd>

    </dl>

    <form asp-action="Eliminar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sí" class="btn btn-outline-danger" /> 
        <div>
            <a class="btn btn-outline-secondary" asp-action="Mostrar">No</a>
        </div>
    </form>
