@model IEnumerable<AsopaabiOnline.Modelo.Cliente>

@{
    ViewData["Title"] = "MostrarClientes";
}

<h1>Inicio</h1>
<p> <a class="btn btn-outline-success" asp-controller="Clientes" asp-action="Agregar">Agregar</a></p>


@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TipoDni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrimerNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SegundoNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrimerApellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SegundoApellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaDeNacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoDeCliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoActividad)
                </th>


                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoDni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrimerNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SegundoNombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrimerApellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SegundoApellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaDeNacimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoDeCliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoActividad)
                    </td>


                    <td>
                        <a asp-action="Actualizar" asp-route-id="@item.Id">Actualizar</a> |

                        <a asp-action="ListarClientesConCedulaFisica" asp-route-id="@item.Id">Clientes Con Cedula Fisica</a>
                    </td>
                </tr>
            }
            }
        </tbody>


    </table>
}
else
{
    <div class="card">
        <div class="card-header">
            Aún no hay clientes agregados

        </div>
    </div>
    
}
