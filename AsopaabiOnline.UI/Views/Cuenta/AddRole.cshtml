@model AsopaabiOnline.UI.Models.Role
@{
    ViewBag.Title = "Agregar nuevo rol";
}
<h1>@ViewBag.Title</h1>
<hr />
<br />
<form asp-action="AddRole" asp-controller="Cuenta" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="Name" class="form-control" placeholder="Nombre del Rol" style="width:200px;" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />


    <button type="submit" class="btn btn-outline-success" style="width:auto">Crear</button>

</form>

<div>
    <br />
    <a class="btn btn-outline-secondary" asp-controller="Cuenta" asp-action="RolesList">Volver</a>
</div>