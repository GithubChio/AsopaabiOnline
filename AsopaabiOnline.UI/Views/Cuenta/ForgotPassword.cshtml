@model ForgotPassword

@{ ViewBag.Title = "¿Olvidaste la contraseña?";
    
 }




<div class="row justify-content-md-center">
    <div class="card  w-25">

        <h3 class="card-header text-center">@ViewBag.Title</h3>
        <div class="card-body m-3">
            <h5 class="card-title">Ingrese su correo electrónico</h5>
            <form method="post" asp-action="ForgotPassword" asp-controller="Cuenta">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success btn-block">Enviar</button>
            </form>
        </div>
    </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
