@model Login
@{
    ViewData["Title"] = "Inicio de Sesión";
}

<h1>Iniciar Sesión</h1>

<div class="row">
    <div class="col-6 offset-3">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" style="width:250px" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" style="width:250px" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        Recordarme?
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Entrar</button>

            </div>
            <div class="form-group">
                <p>
                    <a asp-controller="Cuenta" asp-action="ForgotPassword">¿Olvidaste tu contraseña?</a>
                </p>
                <p>
                    <a asp-controller="Cuenta" asp-action="Register">Registrarse como nuevo usuario</a>
                </p>
            </div>

        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

