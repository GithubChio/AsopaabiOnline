@model IEnumerable<AsopaabiOnline.UI.Models.User>



@{
    ViewBag.Title = "Lista de usuarios";
}

<h2> @ViewBag.Title</h2>

<a class="btn btn-outline-success mb-3" style="width:auto" asp-action="Register" asp-controller="Cuenta">Registrar un usuario nuevo</a>

<a class="btn btn-outline-success mb-3" style="width:auto" asp-action="CustomerUsers" asp-controller="Cuenta">Registrar un usuario nuevo</a>



@if (Model.Any())

{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>
                    <label>DNI</label>
                </th>
                <th>
                    <label>Nombre</label>
                </th>
                <th>
                    <label>Apellido</label>
                </th>
                <th>
                    <label>Email</label>
                </th>
                <th>
                    <label>Tipo de usuario</label>
                </th>

                <th>
                    <label> Opciones</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        <h5 class="card-title">@user.DNI</h5>
                    </td>

                    <td>
                        <h5 class="card-title">@user.Name</h5>
                    </td>

                    <td>
                        <h5 class="card-title">@user.LastName</h5>
                    </td>
                    <td>
                        <h5 class="card-title">@user.Email</h5>
                    </td>
                    <td>
                        <h5 class="card-title">@user.UserType</h5>
                    </td>
                    <td>
                        <ul class="list-group list-group-flush">

                            <li class="list-group-item"> <a asp-action="EditUser" asp-controller="Cuenta" class="btn btn-outline-info" asp-route-id="@user.Id">Editar </a></li>
                            <li class="list-group-item"> <a asp-action="UserDetails" asp-controller="Cuenta" class="btn btn-outline-success" asp-route-id="@user.Id">Detalles </a></li>
                        </ul>

                    </td>
                </tr>

            }

        </tbody>
    </table>


}
else
{
    <div class="card">
        <div class="card-header">
            No hay usuarios creados
        </div>
    </div>
    <div class="card-body">

        <a class="btn btn-outline-success" style="width:auto"
           asp-controller="Cuenta" asp-action="Register">Registro</a>
    </div>
}


