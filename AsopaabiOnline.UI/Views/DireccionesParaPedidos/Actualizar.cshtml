@model AsopaabiOnline.Modelo.DireccionPedido

@{
    ViewBag.Title = "Actualizar";
}

<h1>@ViewBag.Title</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="DireccionesParaPedidos" asp-action="Actualizar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />


            <div class="form-group">
                <label asp-for="IdProvincia" class="control-label"></label>
              <input asp-for="IdProvincia" class="control-label" />
                <span asp-validation-for="IdProvincia" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="IdCanton" class="control-label"></label>
                <input asp-for="IdCanton" class="control-label" />
                <span asp-validation-for="IdCanton" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDistrito" class="control-label"></label>
                <input asp-for="IdDistrito" class="control-label" />
                <span asp-validation-for="IdDistrito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Detalles" class="control-label"></label>
                <textarea asp-for="Detalles" class="form-control" style="width:350px; height:100px;" required></textarea>
                <span asp-validation-for="Detalles" class="text-danger"></span>
            </div>

            <hr />
            <div class="form-group">

                <input type="submit" value="Guardar" class="btn btn-outline-info" />
                <a class="btn btn-outline-secondary" asp-action="Mostrar">Volver</a>
            </div>
        </form>
    </div>
</div>





@section Scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}