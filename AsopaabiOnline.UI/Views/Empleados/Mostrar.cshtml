@model IEnumerable<AsopaabiOnline.Modelo.Empleado>

@{
    ViewData["Title"] = "MostrarEmpleados";
}

<h1>Empleados</h1>
<hr />
<p> <a class="btn btn-outline-warning" asp-controller="Empleados" asp-action="Agregar">Agregar</a></p>


@if (Model.Any())
{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrimerNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SegundoNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrimerApellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SegundoApellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoDeEmpleado)
                </th>
                

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimerNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SegundoNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrimerApellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SegundoApellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoDeEmpleado)
                </td>
               

                <td>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><a asp-action="Actualizar" asp-route-id="@item.Id">Actualizar</a></li>
                        <li class="list-group-item"> <a asp-action="Eliminar" asp-route-id="@item.Id">Eliminar</a></li>
                        <li class="list-group-item"><a asp-action="CambiarTipoDeEmpleado" asp-route-id="@item.Id">Cambiar tipo de empleado</a> </li>

                    </ul>


                </td>
            </tr>
            }

        </tbody>


    </table>
    <hr />
}
else
{
    <br />
    <h3> No hay empleados agregados</h3>

}