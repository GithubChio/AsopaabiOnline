@model IEnumerable<AsopaabiOnline.Modelo.Pago>
@using AsopaabiOnline.Modelo;
@{
    ViewBag.title = " Detalles de Pago";
}
<div class="card">
    <div class="card-header text-center">
        @ViewBag.title
    </div>
    <div class="card-body">
     
        @if (Model.Any())
        {

            @foreach (var item in Model)
            {

                
                <label>Cliente <hr />
                 <br /> @item.IdPedidoNavigation.IdClienteNavigation.FullName  </label><br />

                <label>Cédula: @item.IdPedidoNavigation.IdClienteNavigation.Dni</label><br />
                <label>Correo Electrónico: @item.IdPedidoNavigation.IdClienteNavigation.Email</label><br />
                <label>Tel: @item.IdPedidoNavigation.IdClienteNavigation.PhoneNumber</label><br />

                <p class="card-text">
                 Método de pago:   @Html.DisplayFor(modelItem => item.OpcionesDePago)&nbsp;&nbsp;<i class="@(item.OpcionesDePago == OpcionesDePago.Efectivo ? "fas fa-money-bill-alt text-success":"fas fa-university text-primary")"></i>
                </p>
                <hr />
                <p> Total:  @ViewBag.simboloDeColon @Html.DisplayFor(modelItem => item.Monto)</p>


                <hr />


            }

        }

    </div>
</div>
