@model AsopaabiOnline.Modelo.Pedido

@{
    ViewBag.Title = "Agregar";
}


<h3> Agregar pedido nuevo </h3>
<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Pedidos" asp-action="Agregar" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <table>
                <thead>
                    <tr>
                        <th>
                            <label asp-for="FechaEntrega" class="control-label" style="width:110px;" ></label>
                        </th>
                        <th>
                            <label asp-for="Notas" class="control-label" style="width:120px;"></label>
                        </th>
                        <th>
                            <label asp-for="IdDireccion" class="control-label" style="width:110px;"></label>
                        </th>
                        <th>
                            <label asp-for="IdCliente" class="control-label" style="width:120px;"></label>
                        </th>


                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>
                            <input asp-for="FechaEntrega" class="form-control" style="width:180px;" required/>
                            <span asp-validation-for="FechaEntrega" class="text-danger"></span>
                        </td>
                        <td>
                            <textarea asp-for="Notas" class="form-control" style="width:210px; height:80px;" required></textarea>
                            <span asp-validation-for="Notas" class="text-danger"></span>
                        </td>
                        <td>
                            <select asp-for="IdDireccion" asp-items=@(new SelectList(Model.ListaDeDirecciones,"Id","Id")) class="form-control" style="width:230px;" required>
                                <option selected="selected" disabled value="">Seleccione una opción</option>
                            </select>
                            <span asp-validation-for="IdDireccion" class="text-danger"></span>
                        </td>
                        


                        <td>
                            <input asp-for="IdCliente" asp-route-id="@User.Identity.Name" class="form-control" style="width:210px;" required />
                             
                           

                        </td>



                    </tr>

                </tbody>
            </table>

            <hr />

            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-success" />
                <a class="btn btn-outline-secondary" asp-action="Mostrar"> Volver </a>
            </div>
        </form>

    </div>
</div>
