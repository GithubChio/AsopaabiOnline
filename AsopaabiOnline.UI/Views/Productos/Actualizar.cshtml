@model AsopaabiOnline.Modelo.Producto

@{
    ViewBag.Title = "Actualizar";
}





<div class="justify-content-center text-center ">

    <div class=" card w-50">
        
        <h5 class="card-header text-center ">@ViewBag.Title</h5>

        <div class=" m-3">


            @*<div class="card w-50 mr-2">

                <img class="img-thumbnail" src="~/imagenes/@Model.Imagen" />


            </div><br />*@

            <form asp-controller="Productos" asp-action="Actualizar" method="post" enctype="multipart/form-data">

                <input asp-for="Id" hidden />

                <div class="card ">


                    <input asp-for="ImageFile" type="file" class=" custom-file-input" accept="image/png, image/jpeg" id="laImagen" />
                    <label asp-for="ImageFile" class=" custom-file-label" for="laImagen">selecciona una imagen</label>


                </div>
                <input asp-for="Imagen" hidden />

                <div class="form-group">
                    <label asp-for="Codigo" class="control-label"></label>
                    <input asp-for="Codigo" class="form-control" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UnidadDeMedida" class="control-label"></label>
                    <select asp-for="UnidadDeMedida" asp-items="Html.GetEnumSelectList<AsopaabiOnline.Modelo.UnidadesDeMedida>()" class="form-control">
                        <option selected="selected" disabled value="">Seleccione una opción</option>
                    </select>
                    <span asp-validation-for="UnidadDeMedida" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Precio" class="control-label"></label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Categoria" class="control-label"></label>
                    <select asp-for="Categoria" asp-items="Html.GetEnumSelectList<AsopaabiOnline.Modelo.CategoriaDeProducto>()" class="form-control" required>
                        <option selected="selected" disabled value="">Seleccione una opción</option>
                    </select>
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Estado" class="control-label"></label>
                    <select asp-for="Estado" asp-items="Html.GetEnumSelectList<AsopaabiOnline.Modelo.EstadoDeProducto>()" class="form-control" required>
                        <option selected="selected" disabled value="">Seleccione una opción</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>


                <div class="card-footer form-group">

                    <input type="submit" value="Guardar" class="btn btn-info" />

                    <a class="btn btn-secondary" asp-action="Mostrar"> Volver </a>
                </div>
            </form>
        </div>

     </div>
 </div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    $(document).ready(function () {
        $('.custom-file-input').on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next('.custom-file-label').html(fileName);
        });
    });


</script>
}

