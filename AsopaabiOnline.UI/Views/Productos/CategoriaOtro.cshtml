@model AsopaabiOnline.Modelo.Producto


@{
    ViewData["Title"] = "Categoria Otro";
}

<h1>Categoría de producto</h1>
<hr />
<h3 style="text-align:center;">¿Desea cambiar la categoría de este producto a categoría Otro?</h3>
<div>



    <hr />
    <dl class="row">


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>

    </dl>
    <hr />
    <form asp-action="CategoriaOtro">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sí" class="btn btn-outline-info" />

        <a class="btn btn-outline-secondary" asp-action="Mostrar">No</a>

    </form>
</div>