@model IEnumerable<AsopaabiOnline.Modelo.Producto>

@{
    ViewBag.Title = "Productos";
}


<h3 class="card-header text-center">@ViewBag.Title</h3>





@if (Model.Any())
{
    <div class="card">


        <div class="card-header">
            <a class="btn btn-success" asp-controller="Productos" asp-action="Agregar" style="border-radius:25px;"><i class="fas fa-plus "></i>  </a>
        </div>


        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Imagen)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Precio)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UnidadDeMedida)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Categoria)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Estado)
                        </th>
                        <th>
                            <label>Opciones</label>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>


                            <td>

                                <label>
                                    <img class="rounded" src="~/imagenes/@item.Imagen" height="150" width="150" asp-append-version="true" />
                                </label>

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>

                            <td>

                                @Html.DisplayFor(modelItem => item.Precio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnidadDeMedida)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Categoria)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Estado)
                            </td>


                            <td>

                                <a asp-action="Actualizar" asp-route-id="@item.Id">Actualizar</a> |
                                <a asp-action="Eliminar" asp-route-id="@item.Id">Eliminar</a>





                            </td>
                        </tr>
                    }

                </tbody>


            </table>
        </div>

    </div>
}

else
{

    <div class="card  col-md-11 m-5 w-100">

        <div class="card-body text-center">

            <p class="card-title text-uppercase">No hay productos agregados</p>
            <a asp-action="Agregar" asp-controller="Productos" class="btn btn-primary">Agregar</a>
        </div>
    </div>


}
